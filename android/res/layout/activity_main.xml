<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AmatchTestActivity" >

    <TextView
        android:id="@+id/fpkeys_fn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/btn_load_fpkeys"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fpkeys_fn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:onClick="btn_load_fpkeysClick"
        android:text="Set Index File" />

    <TextView
        android:id="@+id/found_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/btn_load_fpkeys"
        android:layout_below="@+id/btn_start_search"
        android:layout_marginTop="63dp"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/btn_load_translation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_load_fpkeys"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:text="Set Translation File" />

    <Button
        android:id="@+id/btn_start_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/found_display"
        android:layout_below="@+id/btn_load_translation"
        android:layout_marginTop="22dp"
        android:onClick="btn_start_searchClick"
        android:text="@string/start_search" />

</RelativeLayout>